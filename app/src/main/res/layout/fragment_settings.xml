<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="22sp"
                android:padding="15dp"/>
            <View
                android:id="@+id/view"
                android:layout_below="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"/>


            <LinearLayout
                android:id="@+id/list_item_1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:background="@drawable/cus_list_setting"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:weightSum="4">
                <TextView
                    android:id="@+id/txt_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/list_item_1"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="Cài đặt chung"
                    android:textColor="@color/brown"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:id="@+id/btn_sw_beep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_beep"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Beep"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-3dp"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Phát âm thanh beep khi quét vật thể"
                            android:textColor="@color/text_color_1"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_beep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />


                </LinearLayout>



                <RelativeLayout
                    android:id="@+id/btn_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/txt_language"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Ngôn ngữ"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_language"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="Tiếng Anh"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/btn_sw_dark_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Chế độ tối"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_dark_mode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Phản hồi"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_helps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_1"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:layout_marginBottom="10dp"
                android:text="Khác"
                android:textColor="@color/brown"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@id/list_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/txt_helps"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cus_list_setting"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/log_out"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="Đăng xuất"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btn_logout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:backgroundTint="@color/white"
                        android:padding="6dp"
                        android:src="@drawable/ic_logout" />
                </LinearLayout>



            </LinearLayout>
        </RelativeLayout>
</RelativeLayout>